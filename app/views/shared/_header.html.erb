<header class="p-4 text-white bg-blue-500">
  <div class="container flex items-center justify-between mx-auto">
    <%= link_to 'Home', root_path, class: "text-2xl font-bold" %>
    <% if @rate %>
      <p class="text-lg font-semibold text-white">Курс з Монобанку: <%= @rate %></p>
    <% end %>
    <% if user_signed_in? %>
      <div class="flex items-center">
        <p class="mr-4">Hello, <%= current_user.email %></p>
        <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% else %>
      <div>
        <%= link_to 'Sign Up', new_user_registration_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mr-2" %>
        <%= link_to 'Login', new_user_session_path, class: "bg-blue-700 hover:bg-blue-900 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</header>
